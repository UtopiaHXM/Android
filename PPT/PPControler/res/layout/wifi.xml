<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/small_background"
    tools:context=".FragMainActivity" >
    <!-- android:background="@drawable/edittext_style1" -->
    
    
    <ProgressBar
        android:id="@+id/progressBarWifi"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/connect"
        android:layout_below="@+id/connect"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/enterIP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/connect"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:gravity="center"
        android:hint="请输入要连接IP地址"
        android:maxLength="15"
        android:numeric="integer"
        android:digits=".1234567890"
        android:textColor="@color/white" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/connect"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/all_buttonstyle"
        android:text="连接"
        android:textColor="@color/white" />

</RelativeLayout>