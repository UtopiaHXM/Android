<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#282828" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="72dip"
        android:layout_height="24dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/textView_name_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="120dp"
        android:layout_toLeftOf="@+id/textView1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginRight="99dp"
        android:layout_marginTop="100dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/anduinoroubd" />

    <Button
        android:id="@+id/button_ldpeizhi"
        android:layout_width="230sp"
        android:layout_height="60sp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="106dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/button_selector"
        android:minHeight="36dip"
        android:text="路灯配置"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_cjdpeizhi"
        android:layout_width="230sp"
        android:layout_height="60sp"
        android:layout_alignLeft="@+id/button_cpdpeizhi"
        android:layout_alignTop="@+id/textView_name_choose"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_selector"
        android:minHeight="36dip"
        android:text="场景灯配置"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_cpdpeizhi"
        android:layout_width="230sp"
        android:layout_height="60sp"
        android:layout_above="@+id/textView_name_choose"
        android:layout_alignLeft="@+id/button_ldpeizhi"
        android:background="@drawable/button_selector"
        android:minHeight="36dip"
        android:text="草坪灯配置"
        android:textSize="24sp" />

</RelativeLayout>