<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="#282828">

    <Button
        android:id="@+id/button_wifinowsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_bluenowsend"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button_wififilecontrol"
        android:layout_marginBottom="79dp"
        android:background="@drawable/button_selector"
        android:text="wifi实时控制" />

    <Button
        android:id="@+id/button_creatfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_bluefilecontrol"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_bluefilecontrol"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_selector"
        android:text="生成文件" />

    <Button
        android:id="@+id/button_wififilecontrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_wifinowsend"
        android:layout_alignLeft="@+id/button_bluenowsend"
        android:layout_marginBottom="27dp"
        android:background="@drawable/button_selector"
        android:text="wifi文件控制" />

    <Button
        android:id="@+id/button_bluenowsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_wififilecontrol"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button_selector"
        android:text="蓝牙实时发送" />

    <Button
        android:id="@+id/button_bluefilecontrol"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_bluenowsend"
        android:layout_alignRight="@+id/button_bluenowsend"
        android:layout_below="@+id/button_creatfile"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_selector"
        android:text="蓝牙文件控制" />

</RelativeLayout>